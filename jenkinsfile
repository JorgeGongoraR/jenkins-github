pipeline {
  agent any

  stages {
    stage('Install dependencies') {
      steps {
        timeout(time: 31, unit: 'SECONDS') {
            sh 'sleep 10'
            sh 'echo "Si pasé y me tardé 10 segundos"'
        }
        
      }
    }
    stage('Run tests') {
      steps {
        timeout(time: 5, unit: 'SECONDS') {
            sh 'sleep 10'
            sh 'echo "No pasé y me tardé 10 segundos"'
        }
        
      }
    }
  }
}
