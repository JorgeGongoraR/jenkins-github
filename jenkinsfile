pipeline {
  agent any

  stages {
    stage('Install dependencies') {
      steps {
        timeout(time: 31, unit: 'SECONDS') {
            sh 'echo "Me tardé 31 segundos"'
        }
        sh 'sleep 10'
      }
    }
    stage('Run tests') {
      steps {
        timeout(time: 5, unit: 'SECONDS') {
            sh 'echo "Me tardé 10 segundos"'
        }
        sh 'sleep 10'
      }
    }
  }
}
